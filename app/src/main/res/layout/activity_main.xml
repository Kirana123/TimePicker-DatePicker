<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="346dp"
        android:orientation="vertical">

        <DatePicker
            android:id="@+id/date_Picker"
            android:layout_width="wrap_content"
            android:layout_height="333dp"
            android:headerBackground="@color/pink"
            android:amPmBackgroundColor="@color/purple_700"
            android:numbersBackgroundColor="@color/light_pink"
            android:numbersTextColor="#995394"
            android:numbersSelectorColor="#675543"
            android:background="@color/grey"
            android:textColorSecondary="#897530"
            android:textColorPrimary="#359875"/>
      </LinearLayout>

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="347dp"
        android:layout_height="339dp"
        android:layout_centerHorizontal="true"
        android:timePickerMode="clock"
        android:headerBackground="@color/purple_700"
        android:amPmBackgroundColor="@color/purple_700"
        android:numbersBackgroundColor="@color/light_pink"
        android:numbersTextColor="#995394"
        android:numbersSelectorColor="@color/grey"
        android:textColorSecondary="#897530"
        android:textColorPrimary="#359875"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="100dp"
        android:textSize="18dp" />
</LinearLayout>